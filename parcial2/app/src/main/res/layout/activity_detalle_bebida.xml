<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalleBebidaActivity">

    <ImageView
        android:id="@+id/imagendetalleb"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/txtdetallenombreb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="30dp"
        android:textColor="@color/naranja"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/txtdetalledescripcionb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:fontFamily="@font/quicksand_medium"
        android:textColor="@color/gris"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/txtdetallepreciob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio: $"
        android:fontFamily="@font/quicksand_medium"
        android:textColor="@color/naranja"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="300dp"/>

    <EditText
        android:id="@+id/txtdetallecantidadb"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="0"
        android:textSize="20dp"
        android:background="@drawable/bordes_redondos"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar a la orden"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#4CAF50"
        android:onClick="guardaritembebida"/>

</LinearLayout>